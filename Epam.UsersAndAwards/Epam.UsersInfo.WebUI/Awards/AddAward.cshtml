@using Epam.UsersInfo.Entities;
@using Epam.UsersInfo.WebUI.Models;
@{
    if (!User.IsInRole("Admin"))
    {
        Response.SetStatus(HttpStatusCode.Forbidden);
    }

    Layout = "~/_Layout.cshtml";
    if (IsPost)
    {
        var title = Request["title"];
        var imageAward = Request["imageAward"];
        try
        {
            if (String.IsNullOrWhiteSpace(title))
            {
                throw new ArgumentException("Title can't be null or empty");
            }

            //Common.AwardBll.Save(new Award { Title = title, Image = imageAward});
            Common.AwardBll.Add(new Award { Name = title });
            Response.Redirect("~/Awards/ShowAwards");
        }
        catch (Exception ex)
        {
            <div class="alert alert-danger">
                @ex.Message
            </div>
        }
    }
}


<form method="post" class="form-inline">
    <div class="form-group">
        <label for="name">Name: </label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
        <button type="submit" class="btn btn-info"> Add Award</button>
        <br /><br />
        <input type="file" accept="image/*" onchange="preview_image(event)" id="imageAward" name="imageAward">
    </div>
    <br />
    <br />
    <img id="output_image" />
</form>
